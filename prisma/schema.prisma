// schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Node {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  num       Int      @unique
  name      String
  lastHeard DateTime
  snr       Float
  rssi      Float
  position  Json     // Stores lat/lon object
  messages  Message[] @relation("NodeMessages")
  resources Resource[] @relation("NodeResources")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  from      String
  nodeId    Int
  text      String
  timestamp DateTime
  received  DateTime
  rssi      Float
  snr       Float
  hopCount  Int
  status    String
  priority  String
  categories String[]
  enhancedData Json?
  node      Node     @relation("NodeMessages", fields: [nodeId], references: [num])
}

model Resource {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  status    String
  priority  String
  quantity  Int
  nodeId    Int
  node      Node     @relation("NodeResources", fields: [nodeId], references: [num])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}